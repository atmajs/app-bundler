{
    "name": "app-bundler",
    "version": "0.0.51",
    "description": "",
    "main": "lib/bundler.js",
    "bin": {
        "app-bundler": "index.js"
    },
    "scripts": {
        "test": "atma test",
        "watch": "atma custom tools/build --watch",
        "build": "atma custom tools/build && atma custom tools/build --cli",
        "server": "atma server"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/atmajs/app-bundler.git"
    },
    "keywords": [
        "module",
        "commonjs",
        "includejs",
        "bundle",
        "build",
        "package",
        "compiler"
    ],
    "author": "Alex Kit",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/atmajs/app-bundler/issues"
    },
    "homepage": "https://github.com/atmajs/app-bundler",
    "dependencies": {
        "appcfg": "^0.2.42",
        "atma-io": ">=0.2.40",
        "atma-logger": "^1.0.2",
        "atma-utils": "^0.1.13",
        "cheerio": "^0.20.0",
        "includejs": "^0.10.28",
        "maskjs": "^0.64.41",
        "uglify-es": "^3.3.0"
    },
    "atma": {
        "plugins": [
            "atma-loader-ts"
        ],
        "settings": {
            "include": {
                "amd": true,
                "extentionDefault": {
                    "js": "ts"
                }
            },
            "atma-loader-ts": {
                "extensions": [
                    "ts",
                    "test"
                ],
                "typescript": {
                    "compilerOptions": {
                        "noEmitHelpers": true,
                        "importHelpers": true,
                        "#if (TEST)": {
                            "module": "AMD"
                        },
                        "#if (!TEST)": {
                            "module": "CommonJS"
                        }
                    }
                }
            }
        }
    },
    "devDependencies": {
        "@types/node": "^8.5.2",
        "atma": "^0.10.90",
        "selenium-query": "^0.50.35",
        "tslib": "^1.8.1"
    }
}
