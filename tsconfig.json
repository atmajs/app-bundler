{
    "exclude": ["node_modules"],
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@fixtures/*": [ "test/fixtures/typescript/src/*" ],
        },

        "outDir": "ts-temp",
        "lib": ["es2018", "dom"],
        "typeRoots": [
            "node_modules/@types",
            "typings",
            "typings/globals",
            "types"
        ],
        "types": ["node", "assertion", "atma-utest", "jquery"],
        "declaration": true,
        "target": "ES2018",
        "module": "commonjs",
        "sourceMap": false,
        "experimentalDecorators": true
    }
}
